<header class="bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Hamburger icon to toggle the sidebar -->
      <button data-body-target="sideBarButton" class="p-2 rounded-md text-gray-600 focus:outline-none md:hidden">
        <i class="fas fa-bars"></i>
      </button>

      <%= link_to root_path, class: "flex-shrink-0 flex justify-between items-center" do %>
        <%= image_tag "logo.svg", class: "h-10" %>
        <span class="px-4 md:hidden">Something here</span>
      <% end %>

      <div class="hidden md:flex items-center">
        <!-- Search field -->
        <input type="text" placeholder="Search" class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        <!-- Place your navigation links here -->
        <a href="#" class="text-gray-600 hover:text-gray-800 ml-4">Link 1</a>
        <a href="#" class="text-gray-600 hover:text-gray-800 ml-4">Link 2</a>
        <a href="#" class="text-gray-600 hover:text-gray-800 ml-4">Link 3</a>
      </div>
      <div class="md:flex items-center">
        <div class="flex items-center ml-4">
          <%= link_to "#cart", class: "bg-gray-200 rounded-md p-2 relative hover:bg-gray-400 aspect-square h-10 w-10 flex items-center justify-center mx-2" do %>
            <i class="fas fa-shopping-cart text-gray-600 hover:text-gray-800"></i> <!-- Cart icon -->
            <span class="bg-red-500 text-xs text-white rounded-full px-2 py-1 absolute top-0 right-0 transform translate-x-1/2 -translate-y-1/2">5</span> <!-- Number badge -->
          <% end %>
          <% if user_signed_in? %>
            <%= link_to "Profile", me_users_path, class: "text-gray-600 hover:text-gray-800 ml-2" %>
          <% else %>
            <%= link_to "Sign In", :new_user_session, class: "text-gray-600 hover:text-gray-800 ml-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
